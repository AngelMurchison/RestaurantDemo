@model IEnumerable<ResturantDemo.Models.Orders>

@{
    ViewBag.Title = "Index";
}

<h2>All orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.timeCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isFulfilled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.destination)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timeCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isFulfilled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.destination)
        </td>
    </tr>
}

</table>
